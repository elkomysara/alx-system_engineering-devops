
#!/usr/bin/env bash
# Configures an Nginx server to return a custom 404 page that contains "Ceci n'est pas une page".

# Install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Create a custom 404 error page
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Configure Nginx to use the custom 404 error page
sed -i '/^server {/a \    error_page 404 /custom_404.html;\n' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
service nginx restart
